{
  "Login": {
    "tags": [
      "Authentication"
    ],
    "description": "Logs in a registered user",
    "operationId": "login",
    "requestBody": {
      "description": "Credentials of a registered user (email & password)",
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../definitions/authentication.json#/LoginForm"
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../definitions/authentication.json#/LoginResponse"
            }
          }
        }
      },
      "404": {
        "description": "User not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../definitions/error.json#/ErrorResponse"
            }
          }
        }
      }
    }
  },
  "ActivateUser": {
    "tags": [
      "Authentication"
    ],
    "parameters": [
      {
        "name": "activateToken",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    ],
    "description": "Activates the user within the token passed in the path",
    "operationId": "activateUser",
    "responses": {
      "200": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../definitions/index.json#/LoginResponse"
            }
          }
        }
      },
      "404": {
        "description": "User not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../definitions/error.json#/ErrorResponse"
            }
          }
        }
      }
    }
  }
}